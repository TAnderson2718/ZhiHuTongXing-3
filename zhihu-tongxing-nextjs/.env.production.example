# 智护童行生产环境配置示例
# 复制此文件为 .env.production 并填入真实值

# 应用配置
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
PORT=3000

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/zhihutongxing?schema=public"

# JWT密钥（请生成强密钥）
JWT_SECRET=your-super-secret-jwt-key-here

# 管理员配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Sentry监控（可选）
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# 文件上传配置
UPLOAD_DIR=/app/public/uploads
MAX_FILE_SIZE=10485760

# 安全配置
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# 腾讯云配置（如果使用）
TENCENT_CLOUD_SECRET_ID=your-secret-id
TENCENT_CLOUD_SECRET_KEY=your-secret-key
TENCENT_CLOUD_REGION=ap-guangzhou
