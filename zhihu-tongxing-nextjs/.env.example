# 智谱清言API配置（可选）
# 如果不配置，系统将使用模拟回复
ZHIPU_API_KEY="your_zhipu_api_key_here"

# Database (已替换为模拟数据，无需配置)
# DATABASE_URL="postgresql://username:password@localhost:5432/zhihu_tongxing"

# Authentication - 必须配置！
# 生成强密码的方法：node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET="REQUIRED-GENERATE-A-SECURE-32-BYTE-HEX-STRING"

# Next.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Application
NODE_ENV="development"

# ==================== 媒体支持系统配置 ====================

# 文件上传配置
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,video/ogg,application/pdf,text/plain"

# 本地存储配置
LOCAL_UPLOAD_DIR="./public/uploads"
LOCAL_UPLOAD_URL="/uploads"

# 阿里云 OSS 配置 (可选)
ALIYUN_OSS_REGION="oss-cn-beijing"
ALIYUN_OSS_ACCESS_KEY_ID="your-access-key-id"
ALIYUN_OSS_ACCESS_KEY_SECRET="your-access-key-secret"
ALIYUN_OSS_BUCKET="your-bucket-name"
ALIYUN_OSS_ENDPOINT="https://oss-cn-beijing.aliyuncs.com"
ALIYUN_OSS_CDN_DOMAIN="https://your-cdn-domain.com"

# 腾讯云 COS 配置 (可选)
TENCENT_COS_REGION="ap-beijing"
TENCENT_COS_SECRET_ID="your-secret-id"
TENCENT_COS_SECRET_KEY="your-secret-key"
TENCENT_COS_BUCKET="your-bucket-name"
TENCENT_COS_CDN_DOMAIN="https://your-cdn-domain.com"

# 云存储配置 - 选择存储提供商
# 可选值: "local", "aliyun", "tencent"
CLOUD_STORAGE_PROVIDER="local"

# 管理员配置
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="Admin@2025!Secure#"

# 应用安全配置
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key"

# 视频平台配置
ENABLE_BILIBILI_EMBED=true
ENABLE_TENCENT_VIDEO_EMBED=true
ENABLE_IQIYI_EMBED=true
ENABLE_YOUKU_EMBED=true
ENABLE_YOUTUBE_EMBED=true

# 文件安全配置
ENABLE_FILE_VIRUS_SCAN=false
VIRUS_SCAN_API_KEY="your-virus-scan-api-key"

# 图片处理配置
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# 视频处理配置
ENABLE_VIDEO_TRANSCODING=false
VIDEO_MAX_DURATION=300  # 5 minutes in seconds
VIDEO_MAX_SIZE=52428800  # 50MB in bytes

# 缓存配置
REDIS_URL="redis://localhost:6379"
ENABLE_REDIS_CACHE=false

# 日志配置
LOG_LEVEL="info"
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH="./logs/app.log"

# 开发环境配置
DEBUG_MODE=true

# ==================== Sentry 错误监控配置 ====================

# Sentry DSN - 从 Sentry 项目设置中获取
SENTRY_DSN="your-sentry-dsn-here"
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn-here"

# Sentry 组织和项目信息
SENTRY_ORG="thomas-7b"
SENTRY_PROJECT="zhihutongxing"

# Sentry Auth Token - 用于上传 source maps
SENTRY_AUTH_TOKEN="your-sentry-auth-token-here"

# 应用版本 - 用于 Sentry 发布跟踪
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Sentry 环境配置
SENTRY_ENVIRONMENT="development"
